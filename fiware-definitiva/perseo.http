    "description": "Notify Perseo of temperature changes temeperature",
    "subject": {
      "entities": [
        {
          "id": ".*",
          "type": "Room"
        }
      ],
      "condition": {
        "attrs": ["temperature"],
        "expression": {
          "q": "temperature>25"
        }
      }
    },
    "notification": {
      "http": {
        "url": "http://localhost:9090/notices"
      },
      "attrs": ["temperature"]
    }
  }'

